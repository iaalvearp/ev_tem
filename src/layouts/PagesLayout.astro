---
import Layout from "@/layouts/Layout.astro"

interface Props {
    pageTitle: string
}

const { pageTitle } = Astro.props
---

<Layout title={pageTitle}>
    <main class="bg-[var(--secondary)] w-full text-[var(--primary)]">
        <div class="w-full max-w-3xl mx-auto h-full flex justify-between items-center bg-[var(--accent)] px-8">
            <h1 class="h-20 w-full grid content-center">{pageTitle} by <strong class="block text-4xl text-[var(--secondary)] -mt-2">Alpes</strong></h1>
            <a href="/#">
                <svg
                xmlns="http://www.w3.org/2000/svg"
                width="36"
                height="36"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-back-up hover:stroke-[var(--secondary)] scale-100 active:scale-95 duration-300"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 14l-4 -4l4 -4" /><path d="M5 10h11a4 4 0 1 1 0 8h-1" /></svg>
            </a>
        </div>
        <section class="w-full max-w-3xl flex justify-center items-center flex-wrap gap-8 mt-8">
            <slot />
        </section>
    </main>
</Layout>
