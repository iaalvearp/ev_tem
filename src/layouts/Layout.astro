---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body >
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary: #333333;
		--primary-overlay: rgba(51, 51, 51, 0.6);
		--secondary: #FFF;
		--accent: #EFB810;
	}
	h1, h2, h3 {
		text-wrap: balance;
	}
	p {
		text-wrap: pretty;
	}
	@font-face {
		font-family: 'font-sans';
		src: url('/fonts/Monse.ttf') format('truetype');
		font-family: 'font-handwriting';
		src: url('/fonts/Bailey.otf') format('truetype');
	}

	* {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
	.handwriting {
		font-family: 'font-handwriting', 'Times New Roman', Times, serif;
	}
	.fade-up {
		animation: fade-up 750ms ease-in-out;
	}
	.scroll-fade-in {
		animation: reveal linear forwards;
		animation-timeline: view();
		animation-range: entry 20% cover 35%;
	}
	.lettSpcng {
		letter-spacing: 0.125rem;
	}
	.rotX {
        transform: rotateX(180deg);
    }
    .rotY {
        transform: rotateY(180deg);
    }
    .rotXY {
        transform: rotateY(180deg) rotateX(180deg);
    }
	@keyframes fade-up {
		0% {
			opacity: 0;
			transform: translateY(2.5rem) scale(0.8);
		}
		100% {
			opacity: 1;
			transform: translateY(0) scale(1);
			}
	}

	@keyframes reveal {
		from {
			opacity: 0;
			transform: translateY(5rem);
		}
		to {
			opacity: 1;
			transform: translateY(0rem);
		}
	}

	@keyframes fade-move-down {
		0% {
			transform: translate(0, -10px);
			opacity: 0;
			}
		50% {
			opacity: 1;
			}
		100% {
			transform: translate(0, 10px);
			opacity: 0;
			}
	}

	@keyframes movingArrowLeft {
		0% {
			transform: translateX(0);
		}
		50% {
			transform: translateX(50%);
		}
		100% {
			transform: translateX(0);
		}
	}

	@keyframes movingArrowRight {
		0% {
			transform: translateX(0);
		}
		50% {
			transform: translateX(-50%);
		}
		100% {
			transform: translateX(0);
		}
	}
	@media ( width > 767px ) {
		.lettSpcng-md {
			letter-spacing: 0.125rem;
		}
		.lettSpcng {
			letter-spacing: 0.25rem;
		}
	}
</style>
