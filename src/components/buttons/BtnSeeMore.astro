---
interface Props {
    href: string,
    text: string,
    class?: string
}

const { href, text } = Astro.props;
---



<a class=`${Astro.props.class} block py-2 px-4 bg-[var(--accent)] hover:bg-[var(--secondary)] md:shadow-[0px_0px_0px] md:shadow-[var(--accent)] hover:shadow-[5px_5px_0px] hover:shadow-[var(--accent)] hover:dark:shadow-gold-light border-l hover:border-l border-t hover:border-t border-transparent hover:border-[var(--accent)] text-center text-[var(--primary)] duration-300` href={href}>
    {text}
</a>