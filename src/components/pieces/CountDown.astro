<script>
    let deadline = "May 04 2024 11:30:00 GMT-0500"

    const getRemainTime = (deadline) => {
        let today = new Date();
        let eventDay = new Date(deadline);
        let remainingTime = (eventDay.getTime() - today.getTime() + 1000) / 1000;
        let seconds = ('0' + Math.floor(remainingTime % 60)).slice(-2)
        let minutes = ('0' + Math.floor(remainingTime / 60 % 60)).slice(-2)
        let hours = ('0' + Math.floor(remainingTime / 3600 % 24)).slice(-2)
        let days = Math.floor(remainingTime / (3600 * 24))
        
        return `${days}d : ${hours}h : ${minutes}m : ${seconds}s`;
    }

    const updater = (func) => {
        let update = setInterval(() => {
            let time = func(deadline);
            document.getElementById('countdownResult').textContent = time;
        }, 1000);
        return update
    }

    updater(getRemainTime);
    
</script>



