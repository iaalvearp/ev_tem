---
interface Props {
    src: string
}

const { src } = Astro.props
---

<article class="flex items-center justify-center w-full h-14"
    <div class="grid grid-cols-1 grid-rows-1 h-full">
        <svg id="btnPlay" class="col-start-1 col-end-2 row-start-1 row-end-2" width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-player-play"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 4v16l13 -8z" /></svg>
        <svg id="btnPause" class="col-start-1 col-end-2 row-start-1 row-end-2" width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-player-pause"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 5m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z" /><path d="M14 5m0 1a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1v12a1 1 0 0 1 -1 1h-2a1 1 0 0 1 -1 -1z" /></svg>
    </div>
    <input type="range" name="timeBar" id="timeBar">
</article>

<style>
    #btnPause, #btnPlay {
        transform: scale(0);
        cursor: pointer;
        height: 100%;

    }
    #btnPlay {
        transform: scale(1);
    }
</style>