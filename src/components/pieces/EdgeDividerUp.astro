---
const { srcSolid, srcOverlay } = Astro.props;

interface Props {
    srcSolid?: string,
    srcOverlay?: string
}

---

<div class="rotXY relative grid grid-cols-1 grid-rows-1 w-full h-full -mb-[1px] overflow-hidden z-50">
    <slot name="overlay" class="col-start-1 col-end-2 row-start-1 row-end-2 w-full h-full z-0" />
    <slot name="solid" class="col-start-1 col-end-2 row-start-1 row-end-2 w-full h-full z-10"/>
</div>