---
import OneSliderContainer from "./pieces/OneSliderContainer.astro"
import OneSlide from "./pieces/OneSlide.astro"
---

<script>
    const sliderContainer = document.getElementById("sliderContainer");
    let index = 1;
    let imgs = sliderContainer.querySelectorAll(".slidePic");

    setInterval(()=>{
        let percentage = index * -100;
        sliderContainer.style.transform = "translateX(" + percentage +"%)";
        index+= 1;
        if (index > (imgs.length - 1)) {
            index = 0;
        };
    }, 6000);

</script>


<section class="w-[90%] max-w-[48rem] mx-auto text-center overflow-hidden py-16 grid place-content-center gap-8">
